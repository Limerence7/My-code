/* 水平间距 */
.top-box {
  height: 400rpx;
  background-color: #5555ff;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.top-box .avatar {
  display: block;
  width: 90px;
  height: 90px;
  border-radius: 45px;
  border: 2px solid white;
  box-shadow: 0 1px 5px black;
}
.top-box .nickname {
  color: white;
  font-weight: bold;
  font-size: 16px;
  margin-top: 10px;
}

