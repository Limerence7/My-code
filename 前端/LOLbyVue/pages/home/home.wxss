}
.acti-img-box .swi-item {
  width: 100%;
  display: flex;
}
.acti-img-box .swi-item .swi-style {
  display: flex;
  justify-content: space-around;
  flex-wrap: wrap;
}
.acti-img-box .swi-item .item2-style {
  text-align: center;
