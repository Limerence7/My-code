.swiper-view {
  display: flex;
  flex-direction: column;
}
.swiper-view image {
  height: 200px;
  width: 375px;
}
.selected {
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
  height: 44px;
}
.selected .select-item {
  width: 20%;
  padding: 0 1px;
  text-align: center;
  background-color: #e7e7e7;
}
.selected .select-item.active {
  background-color: #FFFFFF;
  position: relative;
  border-bottom: 4px solid #ffe895;
  color: #ffe895;
}
.selected .select-item .text-style {
  font-size: 14px;
}
.activities {
  display: flex;
  margin-top: 10px;
  line-height: 54px;
}
.activities .top-text {
  margin-left: 10px;
  border-bottom: 1px solid #e7e7e7;
}
.activities .top-text.active {
  background-image: url(data:image/png;base64,);
  background-size: 10% 100%;
  height: 100%;
}
.total {
  width: 100px;
  height: 30px;
  text-align: center;
  line-height: 44px;
  font-size: 25px;
  margin-left: 10px;
}
.total::before {
  content: ' ';
  display: block;
  width: 3px;
  height: 30px;
  background-color: #00aaff;
  position: absolute;
  top: 59%;
  left: 0;
  -webkit-transform: translateY(-50%);
          transform: translateY(-50%);
}
