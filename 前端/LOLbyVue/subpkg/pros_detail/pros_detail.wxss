.cini-model-player {
  background-image: url("https://game.gtimg.cn/images/lpl/es/web201612/team_banner-bg.jpg");
  background-size: 100% 100%;
  width: 100%;
  height: 180px;
}
.cini-model-player .player-bar {
  display: flex;
}
.cini-model-player .player-bar .team-info {
  color: #ffffff;
  margin-top: 100px;
}
.cini-model-player .player-bar .team-info .team-er {
  width: 100px;
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 30px;
}
.cini-model-player .player-bar .team-info .team-slogan {
  font-size: 11px;
}
.cini-model-player .player-bar .head-pic {
  -webkit-transform: translateY(36px);
          transform: translateY(36px);
}
.cini-model-player .player-bar .player-info {
  color: #ffffff;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: center;
}
.cini-model-player .player-bar .player-info .enname {
  font-size: 25px;
  font-weight: 800;
}
.cini-model-player .player-bar .player-info .cnname {
  font-size: 8px;
}
.cini-model-player .player-bar .player-info .rollbox {
  font-size: 8px;
}
.cini-model-player .player-bar .player-info .data-num {
  font-size: 15px;
}
.cini-model-player .player-bar .player-info .data-cont {
  display: flex;
  justify-content: space-around;
  width: 130px;
}
.cini-model-player .player-bar .player-info .data-cont .data-name {
  display: flex;
  font-size: 6px;
  border: 1px solid #ffffff;
}
.cini-model {
  padding-top: 10px;
  background-color: #ffffff;
  height: 400px;
}
.cini-model .hero .floor-title {
  width: 90%;
  height: 30px;
  padding-left: 10px;
  font-size: 20px;
  border-bottom: 1px solid #ededed;
}
.cini-model .hero .hero-list {
  display: flex;
  justify-content: space-around;
}
.cini-model .hero .hero-list .hero-box {
  font-size: 10px;
  align-items: center;
  color: #ffffff;
}
.cini-model .hero .hero-list .hero-box .hero-name {
  position: relative;
  bottom: 20px;
  left: 2px;
  text-align: center;
}
.cini-model .hero .hero-list .hero-box .text-box {
  display: flex;
  justify-content: space-around;
  position: relative;
  bottom: 10px;
  color: #000000;
}
.cini-model .hero .hero-list .hero-box .text-box .hero-back {
  background-color: #ededed;
  width: 49%;
  text-align: center;
}
.cini-model .hero .hero-list .hero-box .text-box .hero-back .text2 {
  font-weight: 800;
  font-size: 11px;
}

