.Content {
  background-color: #0a0a0c;
  height: 800px;
}
.section-header {
  position: relative;
}
.section-header .title-box {
  position: absolute;
  bottom: -30px;
  background-color: #0a0a0c;
}
.section-header .title-box .title-show {
  -webkit-transform: translateY(-35px);
          transform: translateY(-35px);
  justify-content: center;
  width: 100%;
  text-align: center;
}
.section-header .title-box .title-show .title-name {
  color: #937341;
  font-size: 40px;
  font-weight: 400;
  letter-spacing: 8px;
}
.section-header .title-box .title-show .title-headline {
  color: #c4b998;
  font-size: 9px;
  letter-spacing: 4px;
}
.section-details {
  padding-top: 30px;
  width: 100%;
  display: flex;
  justify-content: center;
}
.section-details .avatar-wrapper {
  width: 96%;
  background-color: #111318;
  border: 1px solid #c9aa71;
  border-top: 1px thick #c9aa71;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.section-details .section-header {
  background-image: url("https://game.gtimg.cn/images/lol/universe/images/ChampionIconFrame.png");
  background-size: 100% 100%;
  height: 70px;
  width: 70px;
  display: flex;
  align-items: center;
  justify-content: center;
  -webkit-transform: translateY(-30px);
          transform: translateY(-30px);
}
.section-details .section-header .profile {
  border-radius: 50%;
  border: 2px solid #978b61;
}
.section-details .quote {
  margin-top: 10px;
  width: 100%;
  text-align: center;
  font-size: 18px;
  font-weight: 600;
  -webkit-transform: translateY(-30px);
          transform: translateY(-30px);
}
.section-details .quote .text1 {
  color: #C4B998;
}
.section-details .quote .text2 {
  color: #937341;
}
.section-biog {
  padding-top: 30px;
  width: 100%;
  display: flex;
  justify-content: center;
}
.section-biog .intro-wrapper {
  display: flex;
  width: 100%;
  border: 1px solid #c9aa71;
  border-top: 1px thick #c9aa71;
  background: rgba(251, 115, 138, 0.08);
  justify-content: space-around;
  flex-direction: column;
  align-items: center;
  text-align: center;
}
.section-biog .intro-wrapper .text-style {
  width: 80%;
  color: #eee0ba;
  font-size: 10px;
  font-weight: 400;
}
.section-biog .intro-wrapper .bio_btn {
  background-color: #111318;
  line-height: 38px;
  color: #937341;
  font-weight: 600;
  width: 100px;
  height: 40px;
  border: 1px solid #c9aa71;
}
.popup-content {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  padding: 15px;
  background-color: #0a0a0c;
}
.popup-height {
  height: 100%;
  flex: 1;
  width: 200px;
}
.share-box {
  position: absolute;
  right: 0;
  top: 0;
  z-index: 999;
}

